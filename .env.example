# ZYNCO Africa Environment Variables
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://zynco.africa
NEXT_PUBLIC_SITE_NAME=ZYNCO

# Email Service (for contact form)
# Option 1: Resend (recommended, free tier: 3,000 emails/month)
# Sign up at https://resend.com/ and get your API key
RESEND_API_KEY=re_xxxxxxxxxxxx

# Option 2: SendGrid
# SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Social Media (optional)
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/zyncoafrica
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/zynco
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/zyncoafrica
